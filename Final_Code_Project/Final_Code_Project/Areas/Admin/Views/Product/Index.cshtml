@model IEnumerable<Final_Code_Project.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<a href="/Admin/Product/Create" class="btn btn-primary" style="margin-bottom:15px;">Create New</a>
<div class="table">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="font-size:20px; font-weight:bold;">Name</th>
                <th style="font-size:20px; font-weight:bold;">Description</th>
                <th style="font-size:20px; font-weight:bold;">Added</th>
                <th style="font-size:20px; font-weight:bold;">Price</th>
                <th style="font-size:20px; font-weight:bold;">Section</th>
                <th style="font-size:20px; font-weight:bold;">Category</th>
                <th style="font-size:20px; font-weight:bold;">Image</th>
                <th style="font-size:20px; font-weight:bold;">Edit</th>
                <th style="font-size:20px; font-weight:bold;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="font-size:16px; font-weight:bold;">@item.Name</td>
                <td style="font-size:16px; font-weight:bold;">@item.Description</td>
                <td style="font-size:16px; font-weight:bold;">@item.AdditionDate.ToString("MM'/'dd'/'yyyy")</td>
                <td style="font-size:16px; font-weight:bold;">@item.Price</td>
                <td style="font-size:16px; font-weight:bold;">@item.SectionCategory.Section.Name</td>
                <td style="font-size:16px; font-weight:bold;">@item.SectionCategory.Category.Name</td>
                <td>
                    <img src="~/Assets/img/@item.Image" alt="Alternate Text" style="width:100px; height:80px;" />
                </td>
                <td>
                    <a href="/Admin/Product/Edit/@item.Id" class="btn btn-warning"><i class="far fa-edit"></i></a>
                </td>
                <td>
                    <a href="/Admin/Product/Delete/@item.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>


@model IEnumerable<Final_Code_Project.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<a href="/Admin/Category/Create" class="btn btn-primary" style="margin-bottom:15px;">Create New</a>
<div class="table" style="width:90%">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="font-size:20px; font-weight:bold;">Name</th>
                <th style="font-size:20px; font-weight:bold;">Edit</th>
                <th style="font-size:20px; font-weight:bold;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="font-size:16px; font-weight:bold;">@item.Name</td>
                <td>
                    <a href="/Admin/Category/Edit/@item.Id" class="btn btn-warning"><i class="far fa-edit"></i></a>
                </td>
                <td>
                    <a href="/Admin/Category/Delete/@item.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>


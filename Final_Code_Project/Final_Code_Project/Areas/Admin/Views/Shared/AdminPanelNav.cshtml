@model Final_Code_Project.Models._Admin
<div class="navbar-custom-menu">
    <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
            <!-- Menu Toggle Button -->
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <!-- The user image in the navbar-->
                <img src="~/Assets/img/@Model.Image" class="user-image">
                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                <span class="hidden-xs"></span>
            </a>
            <ul class="dropdown-menu">
                <!-- The user image in the menu -->
                <li class="user-header">
                    <img src="~/Assets/img/@Model.Image" class="img-circle" alt="User Image">
                    <p>@Model.Email</p>
                </li>

                <!-- Menu Footer-->
                <li class="user-footer">
                    <div class="pull-left">

                        <a href="/Admin/Account/Edit" class="btn btn-default btn-flat">Profile</a>
                    </div>
                    <div class="pull-right">
                        <a href="/Admin/Account/Logout" class="btn btn-default btn-flat">Sign out</a>
                    </div>
                </li>
            </ul>
        </li>
        <!-- Control Sidebar Toggle Button -->

    </ul>
</div>
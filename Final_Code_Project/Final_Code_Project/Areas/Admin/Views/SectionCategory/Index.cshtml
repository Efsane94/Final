@model IEnumerable<Final_Code_Project.Models.SectionCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<a href="/Admin/SectionCategory/Create" class="btn btn-primary" style="margin-bottom:15px;">Create New</a>
<div class="table" style="width:90%">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="font-size:20px; font-weight:bold;">Category Name</th>
                <th style="font-size:20px; font-weight:bold;">Section Name</th>
                <th style="font-size:20px; font-weight:bold;">Edit</th>
                <th style="font-size:20px; font-weight:bold;">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="font-size:16px; font-weight:bold;">@item.Category.Name</td>
                <td style="font-size:16px; font-weight:bold;">@item.Section.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "SectionCategory" , new { id = item.Id  })" class="btn btn-warning"><i class="far fa-edit"></i></a>
                </td>
                <td>
                    <a href="/Admin/SectionCategory/Delete/@item.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
            }
        </tbody>

    </table>
</div>
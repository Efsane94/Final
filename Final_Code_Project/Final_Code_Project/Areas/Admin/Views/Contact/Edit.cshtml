@model Final_Code_Project.Models.Contact
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2>Edit</h2>

<form action="/Admin/Contact/Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Information)
        @Html.TextAreaFor(m => m.Information, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Information, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Number)
        @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Number, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Map)
        @Html.TextAreaFor(m => m.Map, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Map, null, new { @class = "text-danger" })
    </div>
    
    <input type="submit" class="btn btn-outline-success" value="Edit" />
    <a href="/Admin/Contact/Index" class="btn btn-outline-primary">Back To List</a>
</form>


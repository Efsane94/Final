@model Final_Code_Project.Models.Image
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @*@Html.HiddenFor(p=>p.SectionCategory.Category.Id)*@
    <div class="form-group">
        <label>Section</label>
        @Html.DropDownList("ProductId", new SelectList(ViewBag.products, "Id", "Name"), "Select Product", new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Product.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Photo)
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", type = "file" })
        @Html.ValidationMessageFor(m => m.Photo, null, new { @class = "text-danger" })
    </div>

    @Html.ValidationMessage("allError")

    <input type="submit" class="btn btn-outline-success" value="Create" />
    <a href="Admin/Images/Index" class="btn btn-outline-primary">Back To List</a>
</form>


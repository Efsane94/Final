	<div class="limiter">
		<div class="container-login100">
            <div class="wrap-login100">
                <form enctype="multipart/form-data" method="post" style="width:100%;">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div>
                        <img src="~/Assets/img/@Model.Image" alt="IMG" style="width:60%;height:150px;">
                        <div class="changeimage" style="height:70px;">
                            <label id="#bb" style="padding: 10px;  background: #f9f8f7;  display: table;  color: forestgreen; margin-top: 20px; margin-left: 90px; ">
                                <i style="font-size:26px; padding-right:10px;" class="fas fa-camera"></i>Change
                                <input type="file" id="File" size="60" style=" display: none;" name="photo">
                            </label>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", @readonly = "readonly" })
                        @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword)
                        @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", type = "password" })
                        @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "text-danger" })
                    </div>

                    <button class="login100-form-btn" type="submit">
                        Update
                    </button>
                    <a href="Admin/MainHeader/Index" class="btn btn-outline-primary" style="margin-top:20px; margin-left:50px; border:none; color:forestgreen">Back To List</a>
                </form>


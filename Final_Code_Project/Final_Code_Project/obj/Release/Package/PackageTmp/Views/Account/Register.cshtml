@model Final_Code_Project.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login_main" style="background-image: url(/Assets/img/bg-img/breadcumb.jpg)">
    <div class="overlay_3"></div>
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="logintitle text-center">
                    <h2>Login/Register</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="login_box_area p_120">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12 col-md-12">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/Assets/img/login.jpg" alt="">
                    <div class="hover">
                        <h4>New to our website?</h4>
                        <p>
                            There are advances being made in science and technology everyday, and a good example of
                            this is the
                        </p>
                        <a class="main_btn" href="/Account/Register">Create an Account</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-12 col-md-12 register_boxx">
                <div class="register_form_inner">
                    <form class="row register_form" method="post" id="contactForm"
                          novalidate="novalidate">
                        <div class="form-group" style="width:100%;">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="width:100%;">
                            @Html.LabelFor(m => m.Surname)
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Surname, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="width:100%;">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="width:100%;">
                            @Html.LabelFor(m => m.Password)
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password" })
                            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group" style="width:100%;">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                        </div>

                        @Html.ValidationMessage("AllError")
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="btn submit_btn main_btn">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



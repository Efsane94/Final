@model Final_Code_Project.Models.Section
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<h2>Edit</h2>
<form action="/Admin/Section/Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "content" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Photo)
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", type = "file" })
        @Html.ValidationMessageFor(m => m.Photo, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Current Image:</label>
        <img src="~/Assets/img/@Model.Image" style="height:80px; object-fit:contain" />
    </div>
    <input type="submit" class="btn btn-outline-success" value="Edit" />
    <a href="/Admin/Section/Index" class="btn btn-outline-primary">Back To List</a>
</form>
